<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:showIn="@layout/activity_main" tools:context=".MainActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Welcome!!!"
            android:id="@+id/txttop"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#f834bd" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tika Alarm"
            android:id="@+id/btntika"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#18c0e5"
            android:textSize="30sp"
            android:textStyle="italic" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine Alarm"
            android:id="@+id/btnmedicine"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#18c0e5"
            android:textSize="30sp"
            android:textStyle="italic" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Health Center"
            android:id="@+id/btnapi"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#18c0e5"
            android:textSize="30sp"
            android:textStyle="italic" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blog"
            android:id="@+id/btnblog"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#18c0e5"
            android:textSize="30sp"
            android:textStyle="italic" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="baby care"
            android:id="@+id/btncare"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#18c0e5"
            android:textSize="30sp"
            android:textStyle="italic" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="about us"
            android:id="@+id/btnabout"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#f834bd"
            android:textSize="20dp"
            android:layout_weight="0.70" />
    </LinearLayout>
</ScrollView>